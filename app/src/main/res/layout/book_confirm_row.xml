<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_containerRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:paddingBottom="8dp">

    <Button
            android:id="@+id/id_checkOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/check_out"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/id_requestTitle"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/id_requestTitle"/>

    <ImageView
        android:id="@+id/id_lenderProfileImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/id_lenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/id_accountInfoFirstNameText"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_lenderTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_lenderTitle"
        app:layout_constraintTop_toBottomOf="@+id/id_lenderTitle" />

    <TextView
        android:id="@+id/id_lenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lender"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/id_lenderProfileImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_lenderProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/id_lenderProfileImage" />

    <TextView
        android:id="@+id/id_bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="@string/book_title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/id_lenderProfileImage"
        app:layout_constraintTop_toTopOf="@+id/id_lenderProfileImage" />

    <TextView
        android:id="@+id/id_bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/author"
        app:layout_constraintEnd_toEndOf="@+id/id_bookTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_bookTitle"
        app:layout_constraintTop_toBottomOf="@+id/id_bookTitle" />

    <TextView
        android:id="@+id/id_requestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_pending_status"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/id_bookAuthor"
        app:layout_constraintTop_toTopOf="@+id/id_lenderTitle" />

    <TextView
        android:id="@+id/id_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        app:layout_constraintStart_toStartOf="@+id/id_requestTitle"
        app:layout_constraintTop_toBottomOf="@+id/id_requestTitle" />

    <ImageView
        android:id="@+id/id_checkedIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/accepted_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_bookTitle"
        app:layout_constraintTop_toTopOf="@+id/id_bookTitle"
        app:srcCompat="@drawable/ic_check_circle_green_24dp" />

</android.support.constraint.ConstraintLayout>