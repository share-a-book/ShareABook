<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".book.BookInfoActivity">


    <TextView
            android:id="@+id/id_bookInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/corn_font"
            android:text="@string/book_info"
            android:textColor="@color/colorDarkPurp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="@string/request_book"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/requestButton"
            android:background="@drawable/button_corner"
            app:layout_constraintStart_toStartOf="@+id/info_bookDescription"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/info_bookDescription"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/info_bookPostedBy"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="160dp" tools:src="@tools:sample/avatars"
            android:id="@+id/id_infoBookImage"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" tools:srcCompat="@tools:sample/avatars" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/id_bookInfo"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="25dp"
            android:id="@+id/id_infoBookTitle"
            app:layout_constraintTop_toTopOf="@+id/id_infoBookImage"
            app:layout_constraintStart_toEndOf="@+id/id_infoBookImage"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/quicksand" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/id_infoBookAuthor"
            app:layout_constraintEnd_toEndOf="@+id/id_infoBookTitle"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_infoBookTitle"
            app:layout_constraintStart_toStartOf="@+id/id_infoBookTitle" android:fontFamily="@font/quicksand"
            android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/info_bookDatePosted"
            app:layout_constraintEnd_toEndOf="@+id/id_infoBookAuthor"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_infoBookAuthor"
            app:layout_constraintStart_toStartOf="@+id/id_infoBookAuthor" app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/id_infoBookStatus"
            app:layout_constraintEnd_toEndOf="@+id/id_infoBookAuthor"
            app:layout_constraintStart_toStartOf="@+id/id_infoBookAuthor" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/info_bookDatePosted"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:id="@+id/info_bookDescription"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/id_infoBookImage"
            app:layout_constraintStart_toStartOf="@+id/id_infoBookImage" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/id_infoBookStatus" android:layout_marginEnd="8dp"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="29dp"
            android:id="@+id/info_bookPostedBy" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/info_bookDescription"
            app:layout_constraintStart_toStartOf="@+id/info_bookDescription"
            app:layout_constraintEnd_toEndOf="@+id/info_bookDescription" app:layout_constraintHorizontal_bias="1.0"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
</android.support.constraint.ConstraintLayout>