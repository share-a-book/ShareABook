<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:elevation="5dp"
        android:background="@drawable/card_round_corner"
        android:layout_marginBottom="16dp">

    <TextView
            android:layout_width="173dp"
            android:layout_height="23dp"
            android:id="@+id/info_bookTitle"
            app:layout_constraintTop_toTopOf="@+id/info_bookImage" app:layout_constraintStart_toEndOf="@+id/info_bookImage"
            android:layout_marginStart="16dp" android:text="@string/book_title"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/colorDarkPurp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.343"
            android:textStyle="bold" android:textSize="18sp"/>
    <ImageView
            android:layout_width="102dp"
            android:scaleType="centerCrop"
            android:layout_height="116dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/info_bookImage" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <TextView
            android:text="@string/author"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/info_bookAuthor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_bookTitle"
            app:layout_constraintStart_toStartOf="@+id/info_bookTitle"
            app:layout_constraintEnd_toEndOf="@+id/info_bookTitle" android:fontFamily="@font/quicksand"
            android:textColor="@color/colorDarkPurp" android:textSize="12sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/info_bookStatus"
            app:layout_constraintEnd_toEndOf="@+id/info_bookDatePosted" android:fontFamily="@font/quicksand"
            android:textColor="@color/colorDarkPurp"
            app:layout_constraintStart_toStartOf="@+id/info_bookDatePosted" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_bookDatePosted" android:textSize="12sp"/>
    <TextView
            android:text="@string/description"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/textView6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/info_bookImage"
            app:layout_constraintStart_toStartOf="@+id/info_bookImage"
            app:layout_constraintEnd_toEndOf="@+id/info_bookDatePosted"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="@font/quicksand"
            android:textColor="@color/colorDarkPurp" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/postedBy"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:fontFamily="@font/quicksand"
            android:textAlignment="textEnd" android:textColor="@color/colorDarkPurp" android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="1.0"
            android:text="Posted By:" android:textSize="12sp"/>
    <TextView
            android:text="posted date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/info_bookDatePosted"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/info_bookAuthor"
            app:layout_constraintStart_toStartOf="@+id/info_bookAuthor"
            app:layout_constraintEnd_toEndOf="@+id/info_bookAuthor"
            android:textColor="@color/colorDarkPurp" android:fontFamily="@font/quicksand" android:textSize="12sp"/>
</android.support.constraint.ConstraintLayout>