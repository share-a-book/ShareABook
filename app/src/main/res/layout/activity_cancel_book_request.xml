<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.tracking.fragments.pending.CancelBookRequestActivity">

    <TextView
            android:id="@+id/id_cancelBookInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/corn_font"
            android:text="@string/book_info"
            android:textColor="@color/colorDarkPurp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="@string/cancel_book_request"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/cancelBookButton"
            android:background="@drawable/button_corner"
            app:layout_constraintStart_toStartOf="@+id/info_cancelBookInfoDescription"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/info_cancelBookInfoDescription"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/info_cancelBookPostedBy"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="160dp" tools:src="@tools:sample/avatars"
            android:id="@+id/id_cancelBookInfoImage"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" tools:srcCompat="@tools:sample/avatars" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/id_cancelBookInfo"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="25dp"
            android:id="@+id/id_cancelBookInfoTitle"
            app:layout_constraintTop_toTopOf="@+id/id_cancelBookInfoImage"
            app:layout_constraintStart_toEndOf="@+id/id_cancelBookInfoImage"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/quicksand" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/id_cancelBookInfoAuthor"
            app:layout_constraintEnd_toEndOf="@+id/id_cancelBookInfoTitle"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_cancelBookInfoTitle"
            app:layout_constraintStart_toStartOf="@+id/id_cancelBookInfoTitle" android:fontFamily="@font/quicksand"
            android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/info_cancelBookDatePosted"
            app:layout_constraintEnd_toEndOf="@+id/id_cancelBookInfoAuthor"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_cancelBookInfoAuthor"
            app:layout_constraintStart_toStartOf="@+id/id_cancelBookInfoAuthor" app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:id="@+id/id_cancelBookInfoStatus"
            app:layout_constraintEnd_toEndOf="@+id/id_cancelBookInfoAuthor"
            app:layout_constraintStart_toStartOf="@+id/id_cancelBookInfoAuthor" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/info_cancelBookDatePosted"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:id="@+id/info_cancelBookInfoDescription"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/id_cancelBookInfoImage"
            app:layout_constraintStart_toStartOf="@+id/id_cancelBookInfoImage" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/id_cancelBookInfoStatus" android:layout_marginEnd="8dp"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="29dp"
            android:id="@+id/info_cancelBookPostedBy" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/info_cancelBookInfoDescription"
            app:layout_constraintStart_toStartOf="@+id/info_cancelBookInfoDescription"
            app:layout_constraintEnd_toEndOf="@+id/info_cancelBookInfoDescription" app:layout_constraintHorizontal_bias="1.0"
            android:fontFamily="@font/quicksand" android:textColor="@color/colorDarkPurp"/>

</android.support.constraint.ConstraintLayout>