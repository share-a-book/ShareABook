<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.LoginActivity">

    <EditText
        android:id="@+id/id_loginEmail"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:autofillHints="@string/hint_email"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/id_loginPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="@string/hint_password"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/id_loginEmail"
        app:layout_constraintStart_toStartOf="@+id/id_loginEmail"
        app:layout_constraintTop_toBottomOf="@+id/id_loginEmail" />

    <Button
        android:id="@+id/id_loginButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/id_loginButton"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="@+id/id_loginPassword"
        app:layout_constraintStart_toStartOf="@+id/id_loginPassword"
        app:layout_constraintTop_toBottomOf="@+id/id_loginPassword" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_text" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/"
            android:text="@string/no_account"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/id_forgotPasswordButton"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="@+id/id_loginButton"/>

    <TextView
            android:id="@+id/id_signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/"
            android:text="@string/create_one"
            android:textAllCaps="false"
            android:textColor="@color/colorBlue"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/id_loginButton" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_forgotPasswordButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_loginButton"
            app:layout_constraintStart_toStartOf="@+id/id_loginButton"
            app:layout_constraintEnd_toEndOf="@+id/id_loginButton" android:text="@string/id_forgotPasswordButton"
            android:fontFamily="@font/quicksand"/>

</android.support.constraint.ConstraintLayout>